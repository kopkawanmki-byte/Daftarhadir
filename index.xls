<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Hadir - KAWAN MKI</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- Konfigurasi Tema agar sesuai dengan header User -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif'],
                    },
                    colors: {
                        koperasi: {
                            50: '#eff6ff',
                            100: '#dbeafe',
                            200: '#bfdbfe',
                            600: '#2563eb', // Estimasi warna biru header
                            700: '#1d4ed8',
                            800: '#1e40af', // Warna teks header
                            900: '#1e3a8a',
                        }
                    }
                }
            }
        }
    </script>

    <style>
        /* Mencegah scrolling saat tanda tangan di mobile */
        canvas {
            touch-action: none;
        }
        
        .glass-effect {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
    </style>
</head>
<body class="bg-slate-50 font-sans text-slate-700">

    <!-- Header Section (Sesuai Request) -->
    <header class="bg-white border-b border-slate-200 shadow-sm sticky top-0 z-40">
        <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
            <div class="flex items-center space-x-3 md:space-x-4">
                <img src="https://lh3.googleusercontent.com/d/1GfRYHdZVEnt3WnSLJfmMKzx3HLSctPCh" alt="Logo KAWAN MKI" class="h-10 md:h-14 w-auto object-contain" crossorigin="anonymous" onerror="this.src='https://placehold.co/100x100?text=MKI'">
                <div class="border-l pl-3 md:pl-4 border-slate-200">
                    <h1 class="text-lg md:text-xl font-extrabold text-koperasi-800 leading-tight tracking-tight uppercase">KAWAN MKI</h1>
                    <p class="text-[9px] md:text-xs font-medium text-slate-500 tracking-wide uppercase leading-tight">Koperasi Konsumen Karyawan<br class="block md:hidden"> PT Mitra Kiara Indonesia</p>
                </div>
            </div>
            <div class="hidden md:block text-right">
                <p class="text-[10px] text-slate-400 font-bold uppercase tracking-tighter mb-1">Hubungi Kami</p>
                <div class="bg-koperasi-50 text-koperasi-700 px-3 py-1 rounded-full text-sm font-semibold border border-koperasi-100">
                    <i class="fa-solid fa-phone text-xs mr-1"></i> 0857-1705-0604
                </div>
            </div>
            <!-- Mobile Call Button -->
            <div class="md:hidden">
                <a href="tel:085717050604" class="w-9 h-9 bg-koperasi-50 text-koperasi-600 rounded-full flex items-center justify-center border border-koperasi-200">
                    <i class="fa-solid fa-phone"></i>
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="py-8 px-4">
        <div class="max-w-2xl mx-auto">
            
            <!-- Judul Form -->
            <div class="text-center mb-8">
                <h2 class="text-2xl font-bold text-slate-800">Form Daftar Hadir</h2>
                <p class="text-slate-500 text-sm mt-1">Silakan lengkapi data kunjungan Anda di bawah ini.</p>
            </div>

            <!-- Kartu Form -->
            <div class="bg-white rounded-2xl shadow-lg border border-slate-100 overflow-hidden">
                <div class="bg-koperasi-50 px-6 py-4 border-b border-koperasi-100 flex items-center gap-2">
                    <i class="fa-solid fa-clipboard-user text-koperasi-700"></i>
                    <h3 class="font-semibold text-koperasi-800">Data Pengunjung</h3>
                </div>

                <form id="attendanceForm" class="p-6 md:p-8 space-y-6">
                    
                    <!-- Nama Lengkap -->
                    <div>
                        <label for="nama" class="block text-sm font-semibold text-slate-700 mb-2">Nama Lengkap <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fa-regular fa-user text-slate-400"></i>
                            </div>
                            <input type="text" id="nama" name="nama" required
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-300 rounded-lg focus:ring-2 focus:ring-koperasi-600 focus:border-koperasi-600 transition-all outline-none text-sm md:text-base placeholder-slate-400"
                                placeholder="Masukkan nama lengkap Anda">
                        </div>
                    </div>

                    <!-- Departemen -->
                    <div>
                        <label for="dept" class="block text-sm font-semibold text-slate-700 mb-2">Departemen / Unit <span class="text-red-500">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fa-regular fa-building text-slate-400"></i>
                            </div>
                            <select id="dept" name="dept" required onchange="toggleLainnya(this)"
                                class="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-300 rounded-lg focus:ring-2 focus:ring-koperasi-600 focus:border-koperasi-600 transition-all outline-none text-sm md:text-base appearance-none cursor-pointer">
                                <option value="" disabled selected>Pilih Departemen</option>
                                <option value="Operasional">Operasional</option>
                                <option value="Produksi">Produksi</option>
                                <option value="Gudang">Gudang / Logistik</option>
                                <option value="HR & GA">HR & GA</option>
                                <option value="Keuangan">Keuangan</option>
                                <option value="Pemasaran">Pemasaran</option>
                                <option value="IT">IT / Teknisi</option>
                                <option value="RND & QC">RND & QC</option>
                                <option value="Tamu">Tamu Eksternal</option>
                                <option value="Lainnya" class="font-bold text-koperasi-700">+ Lainnya (Ketik Baru)</option>
                            </select>
                            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                                <i class="fa-solid fa-chevron-down text-slate-400 text-xs"></i>
                            </div>
                        </div>
                        
                        <!-- Input Lainnya (Hidden by default) -->
                        <div id="dept-lainnya-container" class="hidden mt-3 transition-all duration-300 ease-in-out">
                            <label for="dept-lainnya" class="block text-xs font-semibold text-slate-500 mb-1 ml-1">Nama Departemen / Unit Baru:</label>
                            <input type="text" id="dept-lainnya" 
                                class="w-full px-4 py-3 bg-white border border-slate-300 rounded-lg focus:ring-2 focus:ring-koperasi-600 focus:border-koperasi-600 transition-all outline-none text-sm md:text-base placeholder-slate-400"
                                placeholder="Ketik nama departemen anda...">
                        </div>
                    </div>

                    <!-- Kolom Saran -->
                    <div>
                        <label for="saran" class="block text-sm font-semibold text-slate-700 mb-2">Saran & Masukan</label>
                        <div class="relative">
                            <textarea id="saran" name="saran" rows="3"
                                class="w-full p-4 bg-slate-50 border border-slate-300 rounded-lg focus:ring-2 focus:ring-koperasi-600 focus:border-koperasi-600 transition-all outline-none text-sm md:text-base placeholder-slate-400 resize-none"
                                placeholder="Tuliskan saran atau keperluan Anda di sini..."></textarea>
                        </div>
                    </div>

                    <!-- Tanda Tangan Digital -->
                    <div>
                        <label class="block text-sm font-semibold text-slate-700 mb-2">Tanda Tangan Digital <span class="text-red-500">*</span></label>
                        <div class="border-2 border-dashed border-slate-300 rounded-xl bg-slate-50 relative overflow-hidden group hover:border-koperasi-600 transition-colors">
                            <canvas id="signature-pad" class="w-full h-48 cursor-crosshair"></canvas>
                            
                            <!-- Placeholder Text -->
                            <div id="sign-placeholder" class="absolute inset-0 flex flex-col items-center justify-center pointer-events-none text-slate-300 select-none group-hover:text-slate-400 transition-colors">
                                <i class="fa-solid fa-pen-nib text-2xl mb-2"></i>
                                <span class="text-xs uppercase font-bold tracking-wider">Tanda Tangan Disini</span>
                            </div>

                            <!-- Clear Button -->
                            <button type="button" id="clear-btn" class="absolute bottom-2 right-2 bg-white text-slate-600 hover:text-red-500 text-xs px-3 py-1.5 rounded-md shadow border border-slate-200 transition-colors z-10" title="Hapus Tanda Tangan">
                                <i class="fa-solid fa-trash-can mr-1"></i> Ulangi
                            </button>
                        </div>
                        <p class="text-xs text-slate-400 mt-1.5"><i class="fa-solid fa-circle-info mr-1"></i>Gunakan jari atau mouse untuk tanda tangan.</p>
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button type="submit" class="w-full bg-koperasi-800 hover:bg-koperasi-900 text-white font-bold py-3.5 px-6 rounded-xl shadow-lg shadow-koperasi-800/20 transform transition hover:-translate-y-0.5 active:translate-y-0 focus:ring-4 focus:ring-koperasi-800/30 flex items-center justify-center space-x-2">
                            <span>Simpan Kehadiran</span>
                            <i class="fa-solid fa-paper-plane"></i>
                        </button>
                    </div>

                </form>
            </div>
            
            <p class="text-center text-xs text-slate-400 mt-6">&copy; 2024 Koperasi Konsumen Karyawan PT Mitra Kiara Indonesia</p>
        </div>
    </main>

    <!-- Modal Sukses (Hidden by default) -->
    <div id="successModal" class="fixed inset-0 z-50 flex items-center justify-center hidden">
        <div class="absolute inset-0 bg-slate-900/50 backdrop-blur-sm" id="modalOverlay"></div>
        <div class="bg-white rounded-2xl p-8 max-w-sm w-full mx-4 relative z-10 text-center shadow-2xl transform scale-95 opacity-0 transition-all duration-300" id="modalContent">
            <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fa-solid fa-check text-3xl"></i>
            </div>
            <h3 class="text-xl font-bold text-slate-800 mb-2">Berhasil!</h3>
            <p class="text-slate-500 mb-6">Terima kasih, data kehadiran Anda telah berhasil disimpan di sistem KAWAN MKI.</p>
            <button onclick="closeModal()" class="w-full bg-slate-800 text-white font-semibold py-2.5 rounded-lg hover:bg-slate-900 transition-colors">
                Tutup
            </button>
        </div>
    </div>

    <!-- Script Logic -->
    <script>
        // --- Toggle Input Lainnya ---
        function toggleLainnya(selectElement) {
            const container = document.getElementById('dept-lainnya-container');
            const input = document.getElementById('dept-lainnya');
            
            if (selectElement.value === 'Lainnya') {
                container.classList.remove('hidden');
                input.required = true;
                input.focus();
            } else {
                container.classList.add('hidden');
                input.required = false;
                input.value = ''; // Reset value jika disembunyikan
            }
        }

        // --- Signature Pad Logic ---
        const canvas = document.getElementById('signature-pad');
        const ctx = canvas.getContext('2d');
        const clearBtn = document.getElementById('clear-btn');
        const placeholder = document.getElementById('sign-placeholder');
        let isDrawing = false;
        let hasSignature = false;

        // Resize canvas to handle pixel density (High DPI screens)
        function resizeCanvas() {
            const ratio = Math.max(window.devicePixelRatio || 1, 1);
            canvas.width = canvas.offsetWidth * ratio;
            canvas.height = canvas.offsetHeight * ratio;
            ctx.scale(ratio, ratio);
            
            // Re-setup context styles after resize
            ctx.strokeStyle = '#1e40af'; // Warna Koperasi-800
            ctx.lineWidth = 2.5;
            ctx.lineCap = 'round';
            ctx.lineJoin = 'round';
            
            // Note: Resizing clears the canvas, so in a real app you might want to redraw data
            hasSignature = false;
            updatePlaceholder();
        }

        window.addEventListener('resize', resizeCanvas);
        // Initial call after a slight delay to ensure layout is done
        setTimeout(resizeCanvas, 100);

        function startDrawing(e) {
            isDrawing = true;
            hasSignature = true;
            updatePlaceholder();
            draw(e);
        }

        function stopDrawing() {
            isDrawing = false;
            ctx.beginPath(); // Start new path to prevent connecting lines
        }

        function draw(e) {
            if (!isDrawing) return;

            // Get position relative to canvas
            const rect = canvas.getBoundingClientRect();
            let x, y;

            if (e.type.includes('touch')) {
                x = e.touches[0].clientX - rect.left;
                y = e.touches[0].clientY - rect.top;
            } else {
                x = e.clientX - rect.left;
                y = e.clientY - rect.top;
            }

            ctx.lineTo(x, y);
            ctx.stroke();
            ctx.beginPath();
            ctx.moveTo(x, y);
        }

        function updatePlaceholder() {
            if (hasSignature) {
                placeholder.classList.add('opacity-0');
            } else {
                placeholder.classList.remove('opacity-0');
            }
        }

        // Mouse Events
        canvas.addEventListener('mousedown', startDrawing);
        canvas.addEventListener('mouseup', stopDrawing);
        canvas.addEventListener('mousemove', draw);
        canvas.addEventListener('mouseleave', stopDrawing);

        // Touch Events (for Mobile)
        canvas.addEventListener('touchstart', (e) => {
            e.preventDefault(); // Prevent scrolling
            startDrawing(e);
        }, { passive: false });
        
        canvas.addEventListener('touchend', stopDrawing);
        
        canvas.addEventListener('touchmove', (e) => {
            e.preventDefault(); // Prevent scrolling
            draw(e);
        }, { passive: false });

        // Clear Function
        clearBtn.addEventListener('click', () => {
            ctx.clearRect(0, 0, canvas.width, canvas.height); // Clear scaled canvas
            hasSignature = false;
            updatePlaceholder();
        });

        // --- Form Submission Logic ---
        const form = document.getElementById('attendanceForm');
        const modal = document.getElementById('successModal');
        const modalContent = document.getElementById('modalContent');

        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Validasi Tanda Tangan
            if (!hasSignature) {
                alert('Mohon isi tanda tangan digital terlebih dahulu.');
                return;
            }

            // Logika Penentuan Departemen
            let deptValue = document.getElementById('dept').value;
            if (deptValue === 'Lainnya') {
                deptValue = document.getElementById('dept-lainnya').value;
            }

            // Ambil Data
            const formData = {
                nama: document.getElementById('nama').value,
                dept: deptValue, // Menggunakan nilai yang sudah diproses
                saran: document.getElementById('saran').value,
                signatureData: canvas.toDataURL() // Data gambar base64
            };

            // Simulasi proses kirim data (bisa diganti dengan fetch API ke backend)
            console.log("Data Terkirim:", formData);

            // Tampilkan Modal
            modal.classList.remove('hidden');
            // Animasi masuk
            setTimeout(() => {
                modalContent.classList.remove('scale-95', 'opacity-0');
                modalContent.classList.add('scale-100', 'opacity-100');
            }, 10);
        });

        // --- Modal Logic ---
        window.closeModal = function() {
            // Animasi keluar
            modalContent.classList.remove('scale-100', 'opacity-100');
            modalContent.classList.add('scale-95', 'opacity-0');
            
            setTimeout(() => {
                modal.classList.add('hidden');
                // Reset Form
                form.reset();
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                hasSignature = false;
                updatePlaceholder();
            }, 300);
        }
    </script>
</body>
</html>
